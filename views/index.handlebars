<h1>Eat a Burger!</h1>

<ul>
  {{#each burger_data}}
    {{#unless this.devoured}}
      <li>{{ this.burger_name }}</li>
    {{/unless}}
  {{/each}}
</ul>

<form method="POST" action="/add?_method=POST">
  <input type="text" name="burger_name" placeholder="Black & Bleu">
  <button type="submit">🍔</button>
</form>
